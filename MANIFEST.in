# MANIFEST.in - controls which files are included in the distribution

# Include necessary files
include LICENSE
include README.md
include requirements.txt
recursive-include src/dssketch/data *.json *.yaml

# Include examples (optional - if you want them in the package)
# recursive-include examples *.dssketch *.dss *.designspace

# EXCLUDE all other MD files and development files
exclude *.md
exclude CLAUDE.md
exclude REFACTORING_PLAN.md
exclude PERFORMANCE.md
exclude NEXT_STEPS.md
exclude TODO.md
exclude pyproject.toml.example
exclude .gitignore
exclude .gitattributes

# Exclude development directories
prune tests
prune docs
prune .github
prune .vscode
prune __pycache__
recursive-exclude * *.py[co]
recursive-exclude * __pycache__