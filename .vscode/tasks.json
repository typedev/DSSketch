{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "DSSketch: Convert DesignSpace → DSSketch",
            "type": "shell",
            "command": "${workspaceFolder}/.venv/bin/python",
            "args": [
                "dssketch_cli.py",
                "${input:designSpaceFile}"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [],
            "detail": "Convert DesignSpace file to DSSketch format (saves in same directory)"
        },
        {
            "label": "DSSketch: Convert DSSketch → DesignSpace",
            "type": "shell",
            "command": "${workspaceFolder}/.venv/bin/python",
            "args": [
                "dssketch_cli.py",
                "${input:dssFile}"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [],
            "detail": "Convert DSSketch file to DesignSpace format (saves in same directory)"
        },
        {
            "label": "DSSketch: Convert Current File",
            "type": "shell",
            "command": "${workspaceFolder}/.venv/bin/python",
            "args": [
                "dssketch_cli.py",
                "${file}"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [],
            "detail": "Convert currently open file (auto-detects format and saves in same directory)"
        },
        {
            "label": "DSSketch: Test with Examples",
            "type": "shell",
            "command": "${workspaceFolder}/.venv/bin/python",
            "args": [
                "dssketch_cli.py",
                "examples/KazimirText-Variable.designspace"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [],
            "detail": "Quick test conversion with Kazimir example"
        },
        {
            "label": "DSSketch: Round-trip Test",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "cd ${workspaceFolder} && echo 'Starting round-trip test...' && ${workspaceFolder}/.venv/bin/python dssketch_cli.py ${input:testFile} && echo 'Converting back...' && ${workspaceFolder}/.venv/bin/python dssketch_cli.py examples/*.dssketch | head -1 && echo '✅ Round-trip test completed'"
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [],
            "detail": "Test round-trip conversion (auto-detects formats)"
        },
        {
            "label": "DSSketch: Install Package (Dev)",
            "type": "shell",
            "command": "${workspaceFolder}/.venv/bin/pip",
            "args": [
                "install",
                "-e",
                "."
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [],
            "detail": "Install DSSketch in development mode"
        },
        {
            "label": "DSSketch: Build Package",
            "type": "shell",
            "command": "${workspaceFolder}/.venv/bin/python",
            "args": [
                "-m",
                "build"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [],
            "detail": "Build wheel and source distribution"
        },
        {
            "label": "DSSketch: Show Help",
            "type": "shell",
            "command": "${workspaceFolder}/.venv/bin/python",
            "args": [
                "dssketch_cli.py",
                "--help"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [],
            "detail": "Show DSSketch CLI help"
        }
    ],
    "inputs": [
        {
            "id": "designSpaceFile",
            "description": "Select DesignSpace file",
            "type": "pickString",
            "options": [
                "examples/KazimirText-Variable.designspace",
                "examples/KazimirText-Variable-original.designspace", 
                "examples/KazimirText-Variable-test.designspace",
                "examples/complex-rules.designspace",
                "examples/Onweer_v2_RAIN.designspace"
            ],
            "default": "examples/KazimirText-Variable.designspace"
        },
        {
            "id": "dssFile",
            "description": "Select DSS file",
            "type": "pickString",
            "options": [
                "examples/complex-rules.dssketch",
                "examples/KazimirText-Variable-test.dssketch",
                "examples/Onweer_v2_RAIN.dssketch",
                "examples/wildcard-test.dss",
                "output/test_output.dssketch"
            ],
            "default": "examples/complex-rules.dssketch"
        },
        {
            "id": "inputFile",
            "description": "Enter input file path",
            "type": "promptString",
            "default": "examples/"
        },
        {
            "id": "outputName",
            "description": "Enter output filename",
            "type": "promptString",
            "default": "converted_output"
        },
        {
            "id": "testFile",
            "description": "Select file for round-trip test",
            "type": "pickString",
            "options": [
                "examples/KazimirText-Variable.designspace",
                "examples/complex-rules.designspace",
                "examples/complex-rules.dssketch"
            ],
            "default": "examples/KazimirText-Variable.designspace"
        }
    ]
}