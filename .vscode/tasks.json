{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "DSSketch: Convert DesignSpace → DSSketch",
            "type": "shell",
            "command": "${workspaceFolder}/.venv/bin/python",
            "args": [
                "dssketch_cli.py",
                "${input:designSpaceFile}"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [],
            "detail": "Convert DesignSpace file to DSSketch format (saves in same directory)"
        },
        {
            "label": "DSSketch: Convert DSSketch → DesignSpace",
            "type": "shell",
            "command": "${workspaceFolder}/.venv/bin/python",
            "args": [
                "dssketch_cli.py",
                "${input:dssFile}"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [],
            "detail": "Convert DSSketch file to DesignSpace format (saves in same directory)"
        },
        {
            "label": "DSSketch: Convert Current File",
            "type": "shell",
            "command": "${workspaceFolder}/.venv/bin/python",
            "args": [
                "dssketch_cli.py",
                "${file}"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [],
            "detail": "Convert currently open file (auto-detects format and saves in same directory)"
        },
        {
            "label": "DSSketch: Install Package (Dev)",
            "type": "shell",
            "command": "${workspaceFolder}/.venv/bin/pip",
            "args": [
                "install",
                "-e",
                "."
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [],
            "detail": "Install DSSketch in development mode"
        },
        {
            "label": "DSSketch: Build Package",
            "type": "shell",
            "command": "${workspaceFolder}/.venv/bin/python",
            "args": [
                "-m",
                "build"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [],
            "detail": "Build wheel and source distribution"
        },
        {
            "label": "DSSketch: Show Help",
            "type": "shell",
            "command": "${workspaceFolder}/.venv/bin/python",
            "args": [
                "dssketch_cli.py",
                "--help"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [],
            "detail": "Show DSSketch CLI help"
        },
        {
            "label": "Install Dev Dependencies",
            "type": "shell",
            "command": "${workspaceFolder}/.venv/bin/pip",
            "args": [
                "install",
                "-e",
                ".[dev]"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "detail": "Install package in development mode"
        }
    ],
    "inputs": [
        {
            "id": "designSpaceFile",
            "description": "Enter path to DesignSpace file",
            "type": "promptString",
            "default": "examples/"
        },
        {
            "id": "dssFile",
            "description": "Enter path to DSSketch file",
            "type": "promptString",
            "default": "examples/"
        },
        {
            "id": "inputFile",
            "description": "Enter input file path",
            "type": "promptString",
            "default": "examples/"
        },
        {
            "id": "outputName",
            "description": "Enter output filename",
            "type": "promptString",
            "default": "converted_output"
        },
        {
            "id": "testFile",
            "description": "Select file for round-trip test",
            "type": "pickString",
            "options": []
        }
    ]
}
